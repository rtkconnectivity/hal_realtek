config REALTEK_BEE_SPI
	bool "REALTEK Bee MCU spi driver"
	default y
	depends on USE_HAL_REALTEK_BEE_SPI

	select USE_HAL_REALTEK_BEE_RCC
	select USE_HAL_REALTEK_BEE_PINMUX
	select USE_HAL_REALTEK_BEE_NVIC

	help
	  This option enables the spi driver for REALTEK Bee MCU.