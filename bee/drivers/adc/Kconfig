config REALTEK_BEE_ADC
	bool "REALTEK Bee MCU adc driver"
	default y
	depends on USE_HAL_REALTEK_BEE_ADC

	select USE_HAL_REALTEK_BEE_RCC
	select USE_HAL_REALTEK_BEE_PINMUX
	select USE_HAL_REALTEK_BEE_NVIC

	help
	  This option enables the adc driver for REALTEK Bee MCU.

