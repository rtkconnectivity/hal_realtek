config REALTEK_BEE_DMA
	bool "REALTEK Bee MCU dma driver"
	default y
	depends on USE_HAL_REALTEK_BEE_DMA

	select USE_HAL_REALTEK_BEE_RCC
	select USE_HAL_REALTEK_BEE_PINMUX
	select USE_HAL_REALTEK_BEE_NVIC

	help
	  This option enables the dma driver for REALTEK Bee MCU.