config REALTEK_BEE_I2C
	bool "REALTEK Bee MCU i2c driver"
	default y
	depends on USE_HAL_REALTEK_BEE_I2C

	select USE_HAL_REALTEK_BEE_RCC
	select USE_HAL_REALTEK_BEE_PINMUX
	select USE_HAL_REALTEK_BEE_NVIC

	help
	  This option enables the i2c driver for REALTEK Bee MCU.